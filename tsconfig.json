{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "CommonJS",
        "target": "ES2018",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "cjs"
    }
}
